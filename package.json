{
  "name": "babo7-messenger",
  "version": "0.1.0",
  "description": "Secure mobile messenger with E2EE and video calling",
  "private": true,
  "workspaces": [
    "mobile",
    "backend"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=mobile",
    "backend": "npm run start:dev --workspace=backend",
    "dev": "concurrently \"npm run backend\" \"npm run mobile\"",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okneo31/babo7.top.git"
  },
  "keywords": [
    "messenger",
    "secure",
    "e2ee",
    "react-native",
    "webrtc",
    "signal-protocol"
  ],
  "author": "okneo31",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
